- @mypost.each do |obj|
  h1.top_title
    = link_to  obj.title, mybook_path(obj.id)
    p.top_content style="font-size:18px; margin-top:10px;"  
      =obj.content
      span.top_created
        | &nbsp; &nbsp; &nbsp;
        =obj.created_at
  hr
.navigate style=("text-align:center; margin-top:50px") 
  - if @page_num > 0 
    a href="/mybooks/page/#{@page_num -1}"<<前のページ
    | &nbsp; &nbsp; &nbsp; &nbsp; &nbsp;
  a href="/mybooks/page/#{@page_num +1}"次のページ>>






 